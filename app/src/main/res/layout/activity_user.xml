    <android.support.v7.widget.Toolbar
        android:id="@+id/user_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:background="?attr/colorPrimary"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        app:title="" />

    <LinearLayout
        android:layout_width="385dp"
        android:layout_height="wrap_content"
        android:background="@android:color/background_light"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/user_img_avator"
            android:layout_width="@dimen/height_50"
            android:layout_height="@dimen/height_50"

            android:layout_marginBottom="@dimen/margin_12"

            android:layout_marginStart="10dp"
            android:layout_marginTop="@dimen/margin_12"
            android:src="@drawable/u2" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/user_label_debate_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/myfrag_text_debate" />

            <TextView
                android:id="@+id/user_text_debate_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="34" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/user_label_fo_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/myfrag_text_follow" />

            <TextView
                android:id="@+id/user_text_fo_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="64" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/user_label_fan_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/myfrag_text_fan" />

            <TextView
                android:id="@+id/user_text_fan_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="47" />
        </LinearLayout>

        <Button
            android:id="@+id/user_btn_add_follow"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="20dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_style_empty"
            android:text="@string/user_text_add_follow_no"
            android:textColor="@color/colorPrimary" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/user_layout_contest_attended"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="20dp"
        android:background="@android:color/background_light"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/user_img_contest_attended"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            app:srcCompat="@drawable/myfrag_contest_watched" />

        <TextView
            android:id="@+id/user_text_contest_attended"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:text="@string/user_text_contest_watched" />

        <ImageView
            android:id="@+id/user_img_contest_attended_getin"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="right|center_vertical|end"
            android:layout_marginStart="210dp"
            app:srcCompat="@drawable/get_into" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/user_layout_news_released"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@android:color/background_light"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/user_img_news_released"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            app:srcCompat="@drawable/myfrag_news_release" />

        <TextView
            android:id="@+id/user_text_news_released"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:text="@string/user_text_news_release" />

        <ImageView
            android:id="@+id/user_img_news_released_getin"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="fill_vertical"
            android:layout_marginStart="210dp"
            app:srcCompat="@drawable/get_into" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/user_layout_collect"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@android:color/background_light"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/user_img_collect"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            app:srcCompat="@drawable/myfrag_collect" />

        <TextView
            android:id="@+id/user_text_collect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:text="@string/user_text_collect" />

        <ImageView
            android:id="@+id/user_img_collect_getin"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="fill_vertical"
            android:layout_marginStart="237dp"
            app:srcCompat="@drawable/get_into" />
    </LinearLayout>


</LinearLayout>
