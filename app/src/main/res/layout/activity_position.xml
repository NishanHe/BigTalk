<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_position"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.bigtalk.bigtalk.contest.vote.PositionActivity">

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="false"
        android:layout_marginTop="41dp"
        android:id="@+id/radg"
        android:layout_marginLeft="100dp">

        <RadioButton
            android:text="RadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="false"
            android:layout_marginTop="20dp"
            android:id="@+id/rbt_1"
            android:layout_weight="1" />

        <RadioButton
            android:text="RadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:id="@+id/rbt_2"
            android:layout_alignStart="@+id/rbt_1"
            android:layout_alignTop="@+id/rbt_1"
            android:layout_weight="1" />

        <RadioButton
            android:text="RadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignEnd="@+id/rbt_2"
            android:id="@+id/rbt_3"
            android:layout_alignStart="@+id/rbt_2"
            android:layout_alignTop="@+id/rbt_2"
            android:layout_marginTop="30dp"
            android:layout_weight="1" />

        <RadioButton
            android:text="RadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rbt_3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:id="@+id/rbt_4"
            android:layout_alignTop="@+id/rbt_3"
            android:layout_alignStart="@+id/rbt_3"
            android:layout_weight="1" />
    </RadioGroup>

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/radg"
        android:layout_alignTop="@+id/radg"
        android:layout_marginTop="250dp"
        android:background="@drawable/button_full_selector"
        android:text="@string/confirm"
        android:textColor="@color/white" />

</RelativeLayout>
