<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".train.TrainChooseSideActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            app:cardElevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/train_choose_side_topicname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="30dp"
                    android:gravity="center_horizontal"
                    android:text="TextView"
                    android:textColor="@color/text_black_color"
                    android:textSize="@dimen/textSize_title"
                    android:textStyle="bold"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="163dp"
                    tools:layout_editor_absoluteY="170dp" />

                <TextView
                    android:id="@+id/train_choose_side_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|center_horizontal"
                    android:paddingBottom="10dp"
                    android:paddingStart="10dp"
                    android:paddingTop="10dp"
                    android:text="@string/train_choose_side_label"
                    android:textColor="@color/text_black_color"
                    android:textSize="12sp"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="4dp"
                    tools:layout_editor_absoluteY="36dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/train_choose_side_btn_posi"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginEnd="30dp"
                        android:layout_marginStart="30dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_style_full"
                        android:text="@string/train_choose_side_posi"
                        android:textColor="@color/white"
                        tools:ignore="MissingConstraints"
                        tools:layout_editor_absoluteX="48dp"
                        tools:layout_editor_absoluteY="235dp" />

                    <Button
                        android:id="@+id/train_choose_side_btn_nega"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginEnd="30dp"
                        android:layout_marginStart="30dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_style_full"
                        android:text="@string/train_choose_side_nega"
                        android:textColor="@color/white"
                        tools:ignore="MissingConstraints"
                        tools:layout_editor_absoluteX="264dp"
                        tools:layout_editor_absoluteY="235dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/train_choose_img_posi"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="30dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/like" />

                    <TextView
                        android:id="@+id/train_choose_side_text_posiopi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="30dp"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="TextView"
                        tools:ignore="MissingConstraints"
                        tools:layout_editor_absoluteX="60dp"
                        tools:layout_editor_absoluteY="330dp" />

                    <ImageView
                        android:id="@+id/train_choose_img_nega"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="30dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/like" />

                    <TextView
                        android:id="@+id/train_choose_side_text_negaopi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="25dp"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="TextView"
                        tools:ignore="MissingConstraints"
                        tools:layout_editor_absoluteX="278dp"
                        tools:layout_editor_absoluteY="330dp" />
                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            app:cardElevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/train_choose_side_label_topicintro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:text="@string/train_choose_side_label_topicintro"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/train_choose_side_text_topicintro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:paddingEnd="5dp"
                    android:paddingStart="5dp"
                    android:text="TextView" />
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/train_choose_side_btn_sure"
            android:layout_width="135dp"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/button_full_selector"
            android:text="@string/btn_text_confirm"
            android:textColor="@color/white"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="125dp"
            tools:layout_editor_absoluteY="415dp" />
    </LinearLayout>
</ScrollView>
