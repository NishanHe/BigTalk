<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.bigtalk.bigtalk.tools.LoginActivity"
    >


    <!--<ImageView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--app:srcCompat="@drawable/only_text"-->
        <!--android:id="@+id/img_logo"-->
        <!--android:paddingTop="60dp" />-->

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp">

        <TextView
            android:text="@string/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/logo_text"
            android:textSize="60sp"
            android:textColor="@color/colorPrimary"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingTop="30dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:gravity="center_horizontal"
        android:paddingTop="@dimen/margin_12"
        android:paddingBottom="@dimen/margin_12"
        android:layout_gravity="bottom">

        <ImageView
            app:srcCompat="@drawable/phone"
            android:id="@+id/login_label_phone"
            android:layout_weight="0.21"
            android:layout_height="20dp"
            android:layout_width="5dp"
            android:layout_gravity="center_vertical" />

        <EditText
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:hint="@string/register_hint_name"
            android:id="@+id/login_edit_phone"
            android:layout_weight="0.35"
            android:background="@null"
            android:textColor="@color/colorPrimary"
            android:textColorHint="@color/colorPrimary"
            android:gravity="bottom|left"
            android:paddingLeft="5dp"
            android:layout_width="50dp" />
    </LinearLayout>
    <!--android:textCursorDrawable = "@color/colorAccent"-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="30dp"
        android:background="@color/color_line"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/login_line1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:elevation="1dp"
            android:text="" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:paddingTop="@dimen/margin_12"
        android:paddingBottom="@dimen/margin_12">

        <ImageView
            android:id="@+id/login_label_pass"
            android:layout_width="5dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="3dp"
            android:layout_weight="0.21"
            app:srcCompat="@drawable/pass" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:background="@null"
            android:hint="@string/register_hint_pass"
            android:id="@+id/login_edit_psw"
            android:textColor="@color/colorPrimary"
            android:textColorHint="@color/colorPrimary"

            android:gravity="left"
            android:paddingStart="5dp"
            android:layout_weight="0.06" />
    </LinearLayout>
    <!--android:textCursorDrawable = "@color/colorAccent"-->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_line"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="20dp">

        <TextView
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/login_line2"
            android:layout_weight="1" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:text="@string/login_forget_psw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/login_text_forget_psw"
            android:layout_weight="1"
            android:textColor="@color/colorPrimary"
            android:gravity="center_horizontal"
            android:textSize="15sp"
            android:paddingRight="80dp" />

        <TextView
            android:text="@string/login_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/login_text_register"
            android:layout_weight="1"
            android:textColor="@color/colorPrimary"
            android:gravity="center_horizontal"
            android:textSize="15sp"
            android:paddingStart="10dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal">

        <Button
            android:text="@string/btn_text_confirm"
            android:layout_height="wrap_content"
            android:id="@+id/login_btn_confirm"
            android:layout_weight="1"
            android:background="@drawable/button_full_selector"
            android:textColor="@color/base_color_text_white"
            android:layout_marginTop="@dimen/margin_18"
            android:paddingTop="@dimen/margin_5"
            android:paddingBottom="@dimen/margin_5"
            android:elevation="2dp"
            android:textSize="16sp"
            android:layout_width="290dp" />
    </LinearLayout>

</LinearLayout>
