<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context="com.example.bigtalk.bigtalk.contest.ChatFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/group_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/height_message"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/avatar1"
                android:layout_width="@dimen/height_small_portrait"
                android:layout_height="@dimen/height_small_portrait"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="@dimen/margin_12"
                android:layout_marginLeft="@dimen/margin_16"
                android:layout_marginTop="@dimen/margin_12"
                android:src="@drawable/grouphead1" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/follow_name_1"
                    style="@style/style_text_black"
                    android:layout_width="wrap_content"
                    android:layout_height="25.0dip"
                    android:layout_gravity="left|center"
                    android:layout_marginLeft="@dimen/margin_18"
                    android:layout_marginTop="@dimen/margin_12"
                    android:layout_toRightOf="@id/avatar1"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="金钱是不是万恶之源正方队"
                    android:textSize="@dimen/text_size_medium" />

                <TextView
                    android:id="@+id/follow_msg_1"
                    style="@style/style_text_gray_small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/follow_name_1"
                    android:layout_gravity="left|center"
                    android:layout_marginBottom="@dimen/margin_10"
                    android:layout_marginLeft="@dimen/margin_18"
                    android:layout_marginTop="@dimen/margin_8"
                    android:layout_toRightOf="@id/avatar1"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:singleLine="true"
                    android:text="我们来讨论下吧"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/ts_13" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_line"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/height_message"
            android:background="@color/color_line" >
        </View>

        <LinearLayout
            android:id="@+id/group_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/height_message"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/avatar_2"
                android:layout_width="@dimen/height_small_portrait"
                android:layout_height="@dimen/height_small_portrait"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="@dimen/margin_12"
                android:layout_marginLeft="@dimen/margin_16"
                android:layout_marginTop="@dimen/margin_12"
                android:src="@drawable/grouphead2" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/follow_name_2"
                    style="@style/style_text_black"
                    android:layout_width="wrap_content"
                    android:layout_height="25.0dip"
                    android:layout_gravity="left|center"
                    android:layout_marginLeft="@dimen/margin_18"
                    android:layout_marginTop="@dimen/margin_12"
                    android:layout_toRightOf="@id/avatar_2"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="通宵自习室反方队"
                    android:textSize="@dimen/text_size_medium" />

                <TextView
                    android:id="@+id/follow_msg_2"
                    style="@style/style_text_gray_small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/follow_name_2"
                    android:layout_gravity="left|center"
                    android:layout_marginBottom="@dimen/margin_10"
                    android:layout_marginLeft="@dimen/margin_18"
                    android:layout_marginTop="@dimen/margin_8"
                    android:layout_toRightOf="@id/avatar_2"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:singleLine="true"
                    android:text="carbon 加入群"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/ts_13" />

            </LinearLayout>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_line"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/height_message"
            android:background="@color/color_line" >
        </View>

        <LinearLayout
            android:id="@+id/group_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/height_message"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/avatar_3"
                android:layout_width="@dimen/height_small_portrait"
                android:layout_height="@dimen/height_small_portrait"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="@dimen/margin_12"
                android:layout_marginLeft="@dimen/margin_16"
                android:layout_marginTop="@dimen/margin_12"
                android:src="@drawable/grouphead3" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/follow_name_3"
                    style="@style/style_text_black"
                    android:layout_width="wrap_content"
                    android:layout_height="25.0dip"
                    android:layout_gravity="left|center"
                    android:layout_marginLeft="@dimen/margin_18"
                    android:layout_marginTop="@dimen/margin_12"
                    android:layout_toRightOf="@id/avatar_3"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="人不轻狂亦少年"
                    android:textSize="@dimen/text_size_medium" />

                <TextView
                    android:id="@+id/follow_msg_3"
                    style="@style/style_text_gray_small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/follow_name_3"
                    android:layout_gravity="left|center"
                    android:layout_marginBottom="@dimen/margin_10"
                    android:layout_marginLeft="@dimen/margin_18"
                    android:layout_marginTop="@dimen/margin_8"
                    android:layout_toRightOf="@id/avatar_3"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:singleLine="true"
                    android:text="好的"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/ts_13" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_line"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/height_message"
            android:background="@color/color_line" >
        </View>
    </LinearLayout>
</FrameLayout>
