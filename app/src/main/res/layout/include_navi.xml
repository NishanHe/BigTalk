<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_alignParentTop="true"
    android:background="@drawable/tb"
    android:elevation="2dp"
    android:gravity="center"
    android:orientation="vertical">

    <View
        android:id="@+id/v_top"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_title"
        android:elevation="2dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/tv_left"
            android:layout_width="@dimen/height_40"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:paddingStart="@dimen/margin_10"
            android:paddingEnd="@dimen/margin_5"
            android:src="@drawable/base_action_bar_back_bg_selector"
            app:srcCompat="@drawable/myfrag_edit" />

        <TextView
            android:id="@+id/tv_title"
            style="@style/style_text_large"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_margin="2dp"
            android:textColor="@color/base_color_text_white" />

        <ImageView
            android:id="@+id/tv_right2"
            android:layout_width="@dimen/height_40"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/tv_right"
            android:paddingEnd="@dimen/margin_5"
            android:paddingStart="@dimen/margin_10"
            android:src="@drawable/base_action_bar_back_bg_selector"
            app:srcCompat="@drawable/myfrag_setting" />

        <ImageView
            android:id="@+id/tv_right"
            android:layout_width="@dimen/height_40"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/margin_16"
            android:paddingEnd="@dimen/margin_5"
            android:paddingStart="@dimen/margin_5"
            app:srcCompat="@drawable/myfrag_share" />

    </RelativeLayout>
</LinearLayout>